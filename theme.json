{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "custom": {
      "typography": {
        "font-size": {
          "heading-1": "clamp(3.05rem, 3.54vw + 2.17rem, 5rem)",
          "heading-2": "clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem)",
          "heading-4": "clamp(1.95rem, 1.56vw + 1.56rem, 2.81rem)",
          "heading-5": "clamp(1.56rem, 1vw + 1.31rem, 2.11rem)",
          "heading-6": "clamp(1.25rem, 0.61vw + 1.1rem, 1.58rem)",
          "paragraph": "clamp(1rem, 0.34vw + 0.91rem, 1.19rem)",
          "small": "clamp(0.8rem, 0.17vw + 0.76rem, 0.89rem)"
        }
      },
      "lineHeight": {
        "tiny": 1.15,
        "small": 1.3,
        "medium": 1.4,
        "normal": 1.6
      }
    },
    "spacing": {
      "padding": true,
      "margin": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "border": {
      "radius": true,
      "color": true,
      "style": true,
      "width": true
    },
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1920px"
    },
    "color": {
      "palette": [
        {
          "slug": "primary",
          "color": "#972354",
          "name": "primary"
        },
        {
          "slug": "secondary",
          "color": "#141b2d",
          "name": "secondary"
        },
        {
          "slug": "accent",
          "color": "orange",
          "name": "accent"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "'Merriweather', serif",
          "slug": "Merriweather-serif",
          "name": "Merriweather serif",
          "fontFace": [
            {
              "fontFamily": "'Merriweather', serif",
              "fontWeight": "900",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/Merriweather/Merriweather-Bold.ttf"]
            },
            {
              "fontFamily": "'Merriweather', serif",
              "fontWeight": "400",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": [
                "file:./assets/fonts/Merriweather/Merriweather-Regular.ttf"
              ]
            }
          ]
        }
      ],
      "fontSizes": []
    },
    "shadow": {
      "presets": []
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--merriweather-serif)",
      "lineHeight": "1.5",
      "fontSize": "var(--wp--custom--typography--font-size--paragraph)"
    },
    "blocks": {
      "core/freeform": {}
    },
    "elements": {
      "h1": {
        "typography": {
          "fontWeight": "900",
          "fontSize": "var(--wp--custom--typography--font-size--heading-1)"
        }
      },
      "h2": {
        "typography": {
          "fontWeight": "600",
          "fontSize": "var(--wp--custom--typography--font-size--heading-2)"
        }
      },
      "h3": {
        "typography": {
          "fontWeight": "900",
          "fontSize": "var(--wp--custom--typography--font-size--heading-3)"
        }
      },
      "h4": {
        "typography": {
          "fontWeight": "900",
          "fontSize": "var(--wp--custom--typography--font-size--heading-4)"
        }
      },
      "h5": {
        "typography": {
          "fontWeight": "900",
          "fontSize": "var(--wp--custom--typography--font-size--heading-5)"
        }
      },
      "h6": {
        "typography": {
          "fontWeight": "900",
          "fontSize": "var(--wp--custom--typography--font-size--heading-6)"
        }
      }
    }
  }
}
